<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:divider="@color/colorAccent"
    android:orientation="horizontal">



    <ImageView
        android:id="@+id/image_total_commodoties_item"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/testmac" />

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="78dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_total_commodoties_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Iphone 7Plus 128G 银色"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/pb_total_commodities_rate"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:max="200"
            android:progress="50" />


    </LinearLayout>

    <Button

        android:id="@+id/Btn_total_commodities_buy"

        android:layout_width="49dp"
        android:layout_height="23dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="26dp"
        android:background="@color/colorAccent"
        android:text="购买"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

</LinearLayout>
